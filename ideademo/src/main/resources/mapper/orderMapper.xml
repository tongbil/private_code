<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.google.demoForIdea.dao.OrderDao">

	<select id="getAll" parameterType="java.util.Map" resultType="com.google.demoForIdea.model.Order">
		select * from `order` where openid=#{openid} and status =#{status}
	</select>
	<insert id="insert">
		insert into `order`(good_name,good_price,good_main_url,good_num,openid,status) values (#{goodName},#{goodPrice},#{goodMainUrl},#{goodNum},#{openid},#{status})
	</insert>
	<delete id="deleteAll">
		delete from `order`
	</delete>
</mapper>