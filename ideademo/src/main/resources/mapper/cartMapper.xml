<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.google.demoForIdea.dao.CartDao">

	<select id="getAll" parameterType="java.lang.String" resultType="com.google.demoForIdea.model.Cart">
		select * from cart where openid=#{openid}
	</select>
	<insert id="insert">
		insert into cart(good_id,good_name,good_price,good_main_url,good_detail_urls,num,openid) values (#{goodId},#{goodName},#{goodPrice},#{goodMainUrl},#{goodDetailUrls},#{num},#{openid})
	</insert>

	<select id="oneCar" parameterType="java.util.Map" resultType="com.google.demoForIdea.model.Cart">
		select * from cart where good_id =#{goodId} and openid=#{openid}
	</select>
	<update id="updateCar" parameterType="java.util.Map" >
			update cart set num =#{num} where  good_id =#{goodId} and openid=#{openid}
	</update>
	<delete id="deleteCar" parameterType="java.util.Map" >
		delete from  cart  where good_id  =#{goodId}
	</delete>
</mapper>